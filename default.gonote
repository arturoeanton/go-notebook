import "gonum.org/v1/plot"
import "gonum.org/v1/plot/vg"
import "gonum.org/v1/plot/plotter"
import "gonum.org/v1/plot/plotutil"
import "github.com/google/uuid"

func ShowPlot(p *plot.Plot) string {
	id := uuid.New().String()
	if err := p.Save(4*vg.Inch, 4*vg.Inch, "static/tmp.png"); err != nil {
		panic(err)
	}
	return "<div><img src='static/tmp.png?_=" + id + "' /></div>"
}

